@model MyProject.Models.Keyboard

@{
    ViewData["Title"] = @Model.Title;
}

<h1>@Model.Title</h1>

<div>
    <h4>@Model.Description</h4>
    <hr />
    <dl class="row">


        <dd class = "col-sm-10">
            @foreach (Image item in Model.Images)
            {
                string loc = string.Format("/images/{0}/{1}", item.Folder, item.FileName);
                <a href="@Model.Url" target="_blank"><img src="@loc" width="800" ></a>

            }
        </dd>

    </dl>
</div>


<style>
    h1 {
        text-shadow: 2px 2px #000000;
        color: #56cba0;
    }

    img {
        display:block;
        margin-left: auto;
        margin-right: auto;
    }
</style>